{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/essential",
		"standard",
		"plugin:vue/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
		"vue/html-indent": [
			"error", "tab"
		],
		"vue/html-self-closing": "off",
		"no-tabs":"off",
		"indent": [
			"error",
			"tab"
		],
		"no-new":"off"
    }
}